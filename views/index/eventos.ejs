<div class="container-fluid">

	<nav class="navbar2" data-bs-theme="light">
		<nav class="navbar2">
		<div class="container-fluid-barra">
			<form class="d-flex" role="pesquisar">
			<input class="form-control me-2" type="pesquisar" placeholder="Pesquisar Eventos" aria-label="Pesquisar Eventos"/>
			<button class="btn btn-outline-success botao-pesquisa" type="submit"><img width='25' src="https://marketplace.canva.com/LLr8M/MAD4NGLLr8M/1/tl/canva-magnify-MAD4NGLLr8M.png" alt=""></button>
			</form>
		</div>
		</nav>
	</nav>

	<h1 class="titulo">Descubra Eventos <span class='cor-simplex'>Incr√≠veis</span></h1>

	<p class="listagem">Listagem de Eventos (<%= eventos.length %> eventos no total)</p>

	<div class="row">
	<% for (let contador = 0; contador < eventos.length; contador++) { %>

		<div class="col-sm-3 col-md-3 col-lg-3 espacador-coluna">
			<div class="card h-100">
				<img src='/public/img/eventos/<%= eventos[contador].id %>.jpg' class="card-img-top" alt="Foto Evento">
				<div class="card-body d-flex flex-column">
					<h4>
						<%= eventos[contador].nome %>
					</h4>
					<div style="flex: 1 1 auto;">
						
					</div>
					<p class="rodape-card">
						Data: <%= eventos[contador].data %></p>
					<p>
						Valor: R$ <%= eventos[contador].valor %>
					</p>
					<a class="link2" href="/inscricao">
                		Inscreva-se
        			</a>
				</div>
			</div>
		</div>

	<% } %>
	</div>

</div>


